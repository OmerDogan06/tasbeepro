<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Basılı durumda -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Gölge -->
            <item android:top="2dp" android:left="2dp">
                <shape android:shape="oval">
                    <solid android:color="#1A3409" />
                </shape>
            </item>
            <!-- Ana buton -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#D4AF37"
                        android:endColor="#F5E6A8"
                        android:type="radial"
                        android:gradientRadius="50dp"
                        android:centerX="0.3"
                        android:centerY="0.3" />
                    <stroke
                        android:width="3dp"
                        android:color="#2D5016" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal durumda -->
    <item>
        <layer-list>
            <!-- Gölge -->
            <item android:top="3dp" android:left="3dp">
                <shape android:shape="oval">
                    <solid android:color="#1A3409" />
                </shape>
            </item>
            <!-- Ana buton -->
            <item android:bottom="3dp" android:right="3dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#F5E6A8"
                        android:endColor="#D4AF37"
                        android:type="radial"
                        android:gradientRadius="60dp"
                        android:centerX="0.2"
                        android:centerY="0.2" />
                    <stroke
                        android:width="3dp"
                        android:color="#2D5016" />
                </shape>
            </item>
            <!-- İç halka -->
            <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
                <shape android:shape="oval">
                    <stroke
                        android:width="1dp"
                        android:color="#2D5016" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>