<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8F6F0"
                android:endColor="#F0E9D2"
                android:angle="135" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#D4AF37" />
        </shape>
    </item>
    
    <!-- Header -->
    <item
        android:top="8dp"
        android:left="8dp"
        android:right="8dp"
        android:height="24dp">
        <shape android:shape="rectangle">
            <solid android:color="#2D5016" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Ayah content area -->
    <item
        android:top="40dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Progress bar area -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:height="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5E6A8" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
    <!-- Arabic text simulation -->
    <item
        android:top="50dp"
        android:left="16dp"
        android:right="16dp"
        android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#2D5016" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <item
        android:top="60dp"
        android:left="20dp"
        android:right="40dp"
        android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#2D5016" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <item
        android:top="70dp"
        android:left="16dp"
        android:right="24dp"
        android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#2D5016" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>