<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Header: Uygulama adı ve ayarlar butonu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tasbee Pro"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2D5016"
            android:fontFamily="serif" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:contentDescription="Ayarlar" />

    </LinearLayout>

    <!-- Zikir ismi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/widget_zikr_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/zikr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subhanallah"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F5E6A8"
            android:gravity="center"
            android:fontFamily="serif"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Hedef ve yapılan sayılar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Hedef kartı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_count_card_background"
            android:padding="12dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hedef"
                android:textSize="12sp"
                android:textColor="#B8965A"
                android:gravity="center" />

            <TextView
                android:id="@+id/target_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="33"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#D4AF37"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Yapılan kartı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_count_card_background"
            android:padding="12dp"
            android:layout_marginStart="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yapılan"
                android:textSize="12sp"
                android:textColor="#6B7B50"
                android:gravity="center" />

            <TextView
                android:id="@+id/current_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D5016"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Ana sayaç butonu - Büyütülmüş İslami tasarım -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:id="@+id/counter_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/widget_new_counter_button"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Zikir sayacı">

            <!-- Türk Bayrağı Hilal (Background) -->
            <ImageView
                android:id="@+id/crescent_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_crescent"
                android:scaleType="centerInside" />

            <!-- Sayaç değeri (Hilal üstünde) -->
            <TextView
                android:id="@+id/counter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2D5016"
                android:shadowColor="#FFFFFF"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />

            <!-- Dokun yazısı (Hilal üstünde) -->
            <TextView
                android:id="@+id/dokun_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:text="DOKUN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#2D5016"
                android:shadowColor="#FFFFFF"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </RelativeLayout>

    </FrameLayout>

    <!-- Progress bar ve Reset butonu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <!-- İlerleme başlığı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="İlerleme"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#2D5016" />

            <TextView
                android:id="@+id/progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#D4AF37" />

        </LinearLayout>

        <!-- Progress bar ve reset butonu yan yana -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="6dp"
                android:layout_marginRight="12dp"
                android:progressTint="#2D5016"
                android:progressBackgroundTint="#E0E0E0"
                android:max="100"
                android:progress="0" />

            <!-- Reset butonu - İkon olarak -->
            <ImageButton
                android:id="@+id/reset_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/widget_reset_button_background"
                android:src="@drawable/ic_refresh"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Sayacı sıfırla" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>